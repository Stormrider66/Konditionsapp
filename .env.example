# Supabase Configuration
# Get these from your Supabase project settings (https://app.supabase.com)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database
# PostgreSQL connection string from Supabase or your own PostgreSQL instance
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# Email Service (Optional - for report delivery and athlete account creation)
# Sign up at https://resend.com
RESEND_API_KEY=re_your_resend_api_key_here

# Development vs Production
NODE_ENV=development

# Redis Rate Limiting (Optional - for multi-instance production deployments)
# Sign up for free at https://upstash.com
# Without these, the app falls back to in-memory rate limiting (single-instance only)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here

# YouTube Data API (Optional - for exercise video import from YouTube playlists)
# Get your API key from Google Cloud Console: https://console.cloud.google.com
# Enable "YouTube Data API v3" for your project
YOUTUBE_API_KEY=your-youtube-api-key-here

# ===========================================
# STRIPE PAYMENT CONFIGURATION
# ===========================================
# Sign up at https://stripe.com and get your keys from the Developers section
# Use test keys (starting with sk_test_ and pk_test_) for development

# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret
# Get this when you create a webhook endpoint in Stripe Dashboard
# For local development, use Stripe CLI: stripe listen --forward-to localhost:3000/api/payments/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# App URL (needed for Stripe redirect URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# STRIPE PRICE IDS - ATHLETE SUBSCRIPTIONS
# ===========================================
# Create these products/prices in Stripe Dashboard or via API
# Product: "Athlete Standard" - 199 SEK/month or 1990 SEK/year
STRIPE_ATHLETE_STANDARD_MONTHLY=price_athlete_standard_monthly
STRIPE_ATHLETE_STANDARD_YEARLY=price_athlete_standard_yearly

# Product: "Athlete Pro" - 399 SEK/month or 3990 SEK/year
STRIPE_ATHLETE_PRO_MONTHLY=price_athlete_pro_monthly
STRIPE_ATHLETE_PRO_YEARLY=price_athlete_pro_yearly

# ===========================================
# STRIPE PRICE IDS - COACH SUBSCRIPTIONS
# ===========================================
# Product: "Coach Basic/Professional" - 499 SEK/month or 4990 SEK/year
STRIPE_COACH_BASIC_MONTHLY=price_coach_basic_monthly
STRIPE_COACH_BASIC_YEARLY=price_coach_basic_yearly

# Product: "Coach Pro/Business" - 1499 SEK/month or 14990 SEK/year
STRIPE_COACH_PRO_MONTHLY=price_coach_pro_monthly
STRIPE_COACH_PRO_YEARLY=price_coach_pro_yearly

# Product: "Coach Enterprise" - Custom pricing (optional)
STRIPE_COACH_ENTERPRISE_MONTHLY=price_coach_enterprise_monthly
STRIPE_COACH_ENTERPRISE_YEARLY=price_coach_enterprise_yearly

# Optional: Analytics, Monitoring, etc.
# Add any additional environment variables your deployment needs
